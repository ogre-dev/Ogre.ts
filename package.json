{
  "name": "@ogre.dev/framework",
  "version": "1.0.0",
  "description": "Ogres are like onions: they have layers; TypeScript framework for Node.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register index.ts",
    "lint": "eslint --ext .js,.ts .",
    "clean": "rm -rf dist",
    "build": "npm run clean && webpack --config webpack.config.ts",
    "test": "jest",
    "coverage": "./node_modules/.bin/jest --coverage"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-typescript/base"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "author": "Maxence Maire <framework@ogre.dev>",
  "license": "MIT",
  "keywords": [
    "web",
    "app",
    "http",
    "application",
    "framework",
    "rest",
    "restful",
    "typescript",
    "middleware",
    "layer"
  ],
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.5",
    "ts-loader": "^9.1.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4",
    "webpack": "^5.35.0",
    "webpack-cli": "^4.6.0"
  }
}
